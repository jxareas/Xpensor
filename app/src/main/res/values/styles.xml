<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Xpensor.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorControlHighlight</item>
    </style>

    <style name="CardViewWithBottomCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_with_bottom</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_with_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_with_top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="DateDialogItemStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardViewWithTopCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_with_top</item>
    </style>

    <style name="Widget.Xpensor.BottomNavigationView" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">
            @style/Widget.Xpensor.BottomNavigationView.ActiveIndicator
        </item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryContainer">?attr/colorSecondaryContainer</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/icon_tint_selector</item>
        <item name="itemTextColor">?attr/colorControlHighlight</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Xpensor.BottomNavigation</item>
    </style>


</resources>