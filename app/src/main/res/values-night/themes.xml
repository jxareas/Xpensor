<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xpensor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_black</item>
        <item name="colorPrimaryVariant">@color/black_matte</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_gray</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/darker_gray</item>
        <item name="colorOnPrimarySurface">@color/light_gray</item>
        <item name="colorControlHighlight">@color/light_blue_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="bottomNavigationStyle">@style/Widget.Xpensor.BottomNavigationView</item>
    </style>

    <style name="DateDialogItemStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardViewWithBottomCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_with_bottom</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_with_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorOnPrimary">?attr/colorOnPrimarySurface</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPickerButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogPickerButtonText</item>
    </style>
    <style name="DialogPickerButtonText" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AuthStyle">
        <item name="android:tint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">48dp</item>
    </style>
</resources>