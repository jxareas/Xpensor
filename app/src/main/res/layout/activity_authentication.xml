<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/lock_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lock" />

    <TextView
        android:id="@+id/enter_pin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/enter_the_pin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lock_image" />

    <ImageView
        android:id="@+id/circle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/number_2"
        app:layout_constraintEnd_toStartOf="@+id/circle_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_pin_text"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/light_gray" />

    <ImageView
        android:id="@+id/circle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/number_2"
        app:layout_constraintEnd_toStartOf="@+id/circle_3"
        app:layout_constraintStart_toEndOf="@+id/circle_1"
        app:layout_constraintTop_toBottomOf="@id/enter_pin_text"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/light_gray" />

    <ImageView
        android:id="@+id/circle_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/number_2"
        app:layout_constraintEnd_toStartOf="@+id/circle_4"
        app:layout_constraintStart_toEndOf="@+id/circle_2"
        app:layout_constraintTop_toBottomOf="@id/enter_pin_text"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/light_gray" />

    <ImageView
        android:id="@+id/circle_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/number_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circle_3"
        app:layout_constraintTop_toBottomOf="@id/enter_pin_text"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/light_gray" />

    <Button
        android:id="@+id/number_1"
        style="@style/AuthStyle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/number_4"
        app:layout_constraintEnd_toEndOf="@+id/number_4"
        app:layout_constraintStart_toStartOf="@+id/number_4" />

    <Button
        android:id="@+id/number_2"
        style="@style/AuthStyle"
        android:layout_marginBottom="20dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/number_5"
        app:layout_constraintEnd_toEndOf="@+id/number_5"
        app:layout_constraintStart_toStartOf="@+id/number_5" />

    <Button
        android:id="@+id/number_3"
        style="@style/AuthStyle"
        android:layout_marginBottom="20dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/number_6"
        app:layout_constraintEnd_toEndOf="@+id/number_6"
        app:layout_constraintStart_toStartOf="@+id/number_6" />

    <Button
        android:id="@+id/number_4"
        style="@style/AuthStyle"
        android:layout_marginEnd="20dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/number_5"
        app:layout_constraintEnd_toStartOf="@+id/number_5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="@+id/number_5" />

    <Button
        android:id="@+id/number_5"
        style="@style/AuthStyle"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_image" />

    <Button
        android:id="@+id/number_6"
        style="@style/AuthStyle"
        android:layout_marginStart="20dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/number_5"
        app:layout_constraintStart_toEndOf="@+id/number_5"
        app:layout_constraintTop_toTopOf="@+id/number_5" />

    <Button
        android:id="@+id/number_7"
        style="@style/AuthStyle"
        android:layout_marginTop="20dp"
        android:text="7"
        app:layout_constraintEnd_toEndOf="@+id/number_4"
        app:layout_constraintStart_toStartOf="@+id/number_4"
        app:layout_constraintTop_toBottomOf="@+id/number_4" />

    <Button
        android:id="@+id/number_8"
        style="@style/AuthStyle"
        android:layout_marginTop="20dp"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@+id/number_5"
        app:layout_constraintStart_toStartOf="@+id/number_5"
        app:layout_constraintTop_toBottomOf="@+id/number_5" />

    <Button
        android:id="@+id/number_9"
        style="@style/AuthStyle"
        android:layout_marginTop="20dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="@+id/number_6"
        app:layout_constraintStart_toStartOf="@+id/number_6"
        app:layout_constraintTop_toBottomOf="@+id/number_6" />

    <Button
        android:id="@+id/forgot_code"
        style="@style/AuthStyle"
        android:layout_marginTop="20dp"
        android:text="@string/forgot_code"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/number_7"
        app:layout_constraintStart_toStartOf="@+id/number_7"
        app:layout_constraintTop_toBottomOf="@+id/number_7"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/number_0"
        style="@style/AuthStyle"
        android:layout_marginTop="20dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/number_8"
        app:layout_constraintStart_toStartOf="@+id/number_8"
        app:layout_constraintTop_toBottomOf="@+id/number_8" />

    <ImageButton
        style="@style/AuthStyle"
        android:id="@+id/backspace"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_backspace"
        app:layout_constraintEnd_toEndOf="@+id/number_9"
        app:layout_constraintStart_toStartOf="@+id/number_9"
        app:layout_constraintTop_toBottomOf="@+id/number_9" />

</androidx.constraintlayout.widget.ConstraintLayout>