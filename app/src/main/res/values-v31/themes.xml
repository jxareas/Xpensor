<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Xpensor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/xpensor_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue_variant</item>
        <item name="colorOnPrimary">@color/dark_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/xpensor_blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/xpensor_blue</item>

        <item name="android:colorBackground">@color/anti_flash_white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorControlHighlight">@color/xpensor_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="bottomNavigationStyle">@style/Widget.Xpensor.BottomNavigationView</item>

        <item name="android:windowSplashScreenBackground">?attr/colorPrimaryVariant</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/xpensor_logo</item>
    </style>

    <style name="DateDialogItemStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardViewWithBottomCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_with_bottom</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_with_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorOnPrimary">?attr/colorOnPrimarySurface</item>
    </style>

</resources>